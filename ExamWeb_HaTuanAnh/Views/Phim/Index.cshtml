@model List<Phim>
<partial name="_Notification" />
<div class="row">
    <div class="col-md-6">
        <h2>LIST Book</h2>
    </div>
    <div class="col-md-6 text-right">
        <a asp-action="Add" class="btn btn-primary">
            <i class="bi bi-plus-circle-fill"></i> Them Moi
        </a>
    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Tua De</th>
            <th> The Loai</th>
            <th> Gia Ve </th>
            <th> Thoi Luong </th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
        <tr>
            <td>@x.TuaDe</td>
            <td>
                @if (x.TrongNuoc == true)
                {


<a>VietNam</a>
                }
                else
                {
                    <a>NuocNgoai</a>
                }
            </td>
            <td>@x.GiaVe</td>
            <td>@x.ThoiLuong</td>
            <td>
                <a asp-action="Update" asp-route-id="@x.Id" class="btn btn-success">
                    <i class="bi bi-pencil-square"></i> Edit
                </a>
                <a asp-action="Delete" asp-route-id="@x.Id" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Delete
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>
<h5>
    Co tat ca <b>@ViewBag.SUm</b> phim 
</h5>
